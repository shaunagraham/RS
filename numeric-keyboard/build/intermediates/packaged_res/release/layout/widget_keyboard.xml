<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/row1"
        style="@style/Keyboard.Row">

        <LinearLayout
            android:id="@+id/lvOne"
            style="@style/Keyboard.Key"
            android:orientation="vertical">

            <TextView
                android:id="@+id/key1"
                style="@style/textViewNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <TextView
                style="@style/textViewCharKey"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lvTwo"
            style="@style/Keyboard.Key"
            android:orientation="vertical">

            <TextView
                android:id="@+id/key2"
                style="@style/textViewNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2" />

            <TextView
                style="@style/textViewCharKey"
                android:text="abc" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lvThree"
            style="@style/Keyboard.Key"
            android:orientation="vertical">

            <TextView
                android:id="@+id/key3"
                style="@style/textViewNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3" />

            <TextView
                style="@style/textViewCharKey"
                android:text="def" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        style="@style/Keyboard.Row">

        <LinearLayout
            android:id="@+id/lvFour"
            style="@style/Keyboard.Key"
            android:orientation="vertical">

            <TextView
                android:id="@+id/key4"
                style="@style/textViewNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4" />

            <TextView
                style="@style/textViewCharKey"
                android:text="ghi" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lvFive"
            style="@style/Keyboard.Key"
            android:orientation="vertical">

            <TextView
                android:id="@+id/key5"
                style="@style/textViewNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5" />


            <TextView
                style="@style/textViewCharKey"
                android:text="jkl" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lvSix"
            style="@style/Keyboard.Key"
            android:orientation="vertical">

            <TextView
                android:id="@+id/key6"
                style="@style/textViewNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6" />

            <TextView
                style="@style/textViewCharKey"
                android:text="mno" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row3"
        style="@style/Keyboard.Row">

        <LinearLayout
            android:id="@+id/lvSeven"
            style="@style/Keyboard.Key"
            android:orientation="vertical">

            <TextView
                android:id="@+id/key7"
                style="@style/textViewNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7" />

            <TextView
                style="@style/textViewCharKey"
                android:text="pqrs" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lvEight"
            style="@style/Keyboard.Key"
            android:orientation="vertical">

            <TextView
                android:id="@+id/key8"
                style="@style/textViewNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8" />

            <TextView
                style="@style/textViewCharKey"
                android:text="tuv" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lvNine"
            style="@style/Keyboard.Key"
            android:orientation="vertical">

            <TextView
                android:id="@+id/key9"
                style="@style/textViewNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9" />

            <TextView
                style="@style/textViewCharKey"
                android:text="wxyz" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row4"
        style="@style/Keyboard.Row">


        <TextView
            android:id="@+id/keySpecial"
            style="@style/Keyboard.Key" />


        <TextView
            android:id="@+id/key0"
            style="@style/Keyboard.Key"
            android:text="0" />

        <com.konaire.numerickeyboard.view.IconifiedTextView
            android:id="@+id/keyRemove"
            style="@style/Keyboard.Key"
            android:text="&#xe14a;" />
    </LinearLayout>
</LinearLayout>